<div class="container">
  <div class="flat-card">
    <h3><%= @flat.name %></h3>
    <p><%= @flat.address %></p>
    <div class="d-flex">
      <div><%= @flat.number_of_guests %> guests</div>
    </div>
    <p><%= link_to 'More info', flat_path(@flat) %></p>
    <p>
      <%= link_to 'Edit flat', edit_flat_path(@flat) %>
    </p>
    <p>
      <%= link_to 'Delete flat', flat_path(@flat), method: :delete,
      data: { confirm: "Are you sure?" }
      %>
    </p>
  </div>
</div>